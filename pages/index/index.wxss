.container {
  width: 100vw;
  height: 100vh;
}
.nav-wrap {
  background: #2a2660;
}
.content {
  position: relative;
  /* top: -73px; */
  left: 0;
  width: 100%;
}
.content_top {
  position: relative;
  width: calc(100vw - 33px);
  min-height: 269px;
  margin: 0 auto;
  padding: 28px 28px 48px;
  box-sizing: border-box;
  background:rgba(255,255,255,1);
  box-shadow:0px 1.5px 6px 3.5px rgba(70,84,104,0.09);
  border-radius: 11px;
}
.words {
  font-size:18px;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(255,255,255,1);
}
.content_top_title {
  font-size:20px;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(48,49,51,1);
}
.content_top_para {
  font-size:12px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(96,98,102,1);
}
.section {
  margin-top: 15px;
  width: 100%;
  /* height: 95px; */
}
.textarea {
  padding: 9.5px 0 9.5px 12.5px;
  box-sizing: border-box;
  width: 100%;
  /* height: 100%; */
  border-radius:5px;
  border:1px solid rgba(226,226,226,1);
  font-size:15px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(48,49,51,1);
  text-align: justify;
}

.switchview {
  margin-top: 20px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.switch_word {
  margin-top: 5px;
  font-size:12px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(96,98,102,1);
}
.switch {
  width: 40px;
  height: 20px;
  margin-right: 9px;
}
.wx-switch-input{
  width:40px !important;
  height:18px !important;
  }
  /*白色样式（false的样式）*/
  .wx-switch-input::before{
  width: 38px !important;
  height: 16px !important;
  }
  /*绿色样式（true的样式）*/
  .wx-switch-input::after{
  width: 18px !important;
  height: 16px !important;
  }

.content_bottom {
  margin: 15px auto 0;
  width: calc(100vw - 33px);
  min-height: 269px;
  background:rgba(255,255,255,1);
  box-shadow:0px 1.5px 6px 3.5px rgba(70,84,104,0.09);
  border-radius: 11px;
  padding-top: 48px;
  box-sizing: border-box;
}

.terms {
  padding: 0 28px;
  box-sizing: border-box;
  width: 100%;
  min-height: 100px;
}
.roperTerms {
  padding: 35px 28px 0;
  box-sizing: border-box;
  min-height: 162.5px;
  width: 100%;
  background:rgba(240,244,248,0.58);
}
.terms_top {
  box-sizing: border-box;
  padding-bottom: 15px;
  /* min-height: 182px; */
  width: 100%;
  /* border-bottom: 1px solid rgba(216, 216, 216, 1); */
}
.terms_top_border {
  border-bottom: 1px solid #d8d8d8;
}
.roperTerms_title {
  font-size:16px;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(48,49,51,1);
}
.terms_bottom {
  box-sizing: border-box;
  padding-bottom: 42.5px;
  margin-top: 30px;
}
.terms_bottom_card {
  /* min-height: 31px; */
  min-width: 53px;
  float: left;
  margin-right: 10px;
  margin-bottom: 15px;
  padding: 6.5px 13px;
  box-sizing: border-box;
  line-height: 12px;
  text-align: center;
  font-size:13px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(96,98,102,1);
  background:rgba(240,244,248,1);
  border-radius: 4px;
  height: 25px;
}
.btnImage {
  position: absolute;
  bottom: -38px;
  left: 50%;
  transform: translateX(-50%);
  width: 62px;
  height: 62px;
}
.terms_top_card {
  /* min-height: 31px; */
  min-width: 53px;
  float: left;
  margin-right: 10px;
  margin-bottom: 15px;
  padding: 6px 20px;
  box-sizing: border-box;
  line-height: 15px;
  text-align: center;
  font-size:13px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(96,98,102,1);
  background:rgba(240,244,248,1);
  border-radius:16px;
  height: 25px;
}
.chooseWords {
  color:rgba(255,255,255,1);
  background:linear-gradient(239deg,rgba(60,150,255,1) 0%,rgba(101,178,255,1) 100%);
  border-radius:16px;
}
.choosePOSs {
  color:rgba(255,255,255,1);
  background:linear-gradient(239deg,rgba(60,150,255,1) 0%,rgba(101,178,255,1) 100%);
  border-radius:4px;
}
.name {
  margin-top: 12px;
  /* display: flex;
  justify-content: flex-start;
  align-items: center; */
}
.placeName {
  margin-top: 11px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.name_circle {
  border-radius: 50%;
  margin-right: 9px;
  width:3px;
  height:3px;
  background:rgba(73,157,255,1);
}
.name_title {
  font-size:12px;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(48,49,51,1);
}
.name_left {
  float: left;
  min-width: 36px;
  margin-right: 6px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.name_right {
  float: left;
  max-width: 220px;
}
.name_right_com {
  float: left;
  margin-right: 5px;
  font-size:12px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(96,98,102,1);
}
